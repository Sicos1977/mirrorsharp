{
    "name": "mirrorsharp-codemirror-6-preview",
    "version": "0.13.0",
    "engines": {
        "node": ">=16.14.2"
    },
    "description": "Experimental version of mirrorsharp based on CodeMirror 6 preview.",
    "authors": [
        "Andrey Shchekin (https://github.com/ashmind)"
    ],
    "license": "MIT",
    "main": "mirrorsharp.js",
    "types": "mirrorsharp.d.ts",
    "homepage": "https://github.com/ashmind/mirrorsharp",
    "bugs": "https://github.com/ashmind/mirrorsharp/issues",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ashmind/mirrorsharp.git"
    },
    "browserslist": [
        "Chrome >= 80",
        "Edge >= 80",
        "Firefox >= 72"
    ],
    "scripts": {
        "build": "ts-node-script ./build.ts",
        "watch": "ts-node-script ./build.ts --watch",
        "test:skip-render": "cross-env TEST_SKIP_RENDER=true jest",
        "test": "jest"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "transformIgnorePatterns": [
            "/node_modules/(?!@codemirror|lezer-csharp-simple)"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "<rootDir>/tests/tsconfig.json"
            }
        },
        "setupFilesAfterEnv": [
            "<rootDir>/tests/helpers/setup-jest.ts"
        ],
        "globalTeardown": "<rootDir>/tests/helpers/render/docker/global-teardown.ts",
        "testMatch": [
            "<rootDir>/tests/**/*.tests.ts"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "<rootDir>/ts/**/*.ts",
            "<rootDir>/tests/**/*.tests.ts"
        ]
    },
    "dependencies": {
        "@codemirror/autocomplete": "^0.18.1",
        "@codemirror/commands": "^0.18.0",
        "@codemirror/highlight": "^0.18.3",
        "@codemirror/history": "^0.18.0",
        "@codemirror/language": "^0.18.0",
        "@codemirror/lint": "^0.18.0",
        "@codemirror/state": "^0.18.1",
        "@codemirror/tooltip": "^0.18.1",
        "@codemirror/view": "^0.18.1",
        "lezer-csharp-simple": "^0.7.0"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-syntax-class-properties": "^7.8.3",
        "@sinonjs/fake-timers": "^6.0.1",
        "@types/jest": "^26.0.15",
        "@types/jest-image-snapshot": "^4.1.3",
        "@types/lodash.merge": "^4.6.6",
        "@types/node": "^13.9.1",
        "@types/node-fetch": "^2.5.8",
        "@types/puppeteer": "^5.4.0",
        "@types/sinonjs__fake-timers": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "babel-plugin-add-import-extension": "^1.3.1",
        "babel-plugin-transform-commonjs": "^1.1.6",
        "cross-env": "^7.0.3",
        "eslint": "^6.8.0",
        "fast-glob": "^3.2.2",
        "fs-jetpack": "^2.1.0",
        "jest": "^26.6.1",
        "jest-image-snapshot": "^4.2.0",
        "keysim": "^2.0.0",
        "lodash.merge": "^4.6.2",
        "merge-options": "^3.0.4",
        "node-fetch": "^2.6.1",
        "oldowan": "^1.0.0-preview-6",
        "puppeteer": "^3.3.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.9.0",
        "typescript": "^3.8.3"
    }
}
