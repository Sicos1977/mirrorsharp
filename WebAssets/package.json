{
    "name": "mirrorsharp-codemirror-6-preview",
    "version": "0.13.0",
    "engines": {
        "node": ">=16.17.1"
    },
    "description": "Experimental version of mirrorsharp based on CodeMirror 6 preview.",
    "authors": [
        "Andrey Shchekin (https://github.com/ashmind)"
    ],
    "license": "MIT",
    "main": "mirrorsharp.js",
    "types": "mirrorsharp.d.ts",
    "homepage": "https://github.com/ashmind/mirrorsharp",
    "bugs": "https://github.com/ashmind/mirrorsharp/issues",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ashmind/mirrorsharp.git"
    },
    "browserslist": [
        "Chrome >= 80",
        "Edge >= 80",
        "Firefox >= 72"
    ],
    "scripts": {
        "build": "ts-node-script ./build.ts",
        "watch": "ts-node-script ./build.ts --watch",
        "test:skip-render": "cross-env TEST_SKIP_RENDER=true jest",
        "test": "jest"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "testEnvironment": "jsdom",
        "transformIgnorePatterns": [
            "/node_modules/(?!@codemirror|lezer-csharp-simple)"
        ],
        "globals": {
            "ts-jest": {
                "tsconfig": "<rootDir>/ts/tsconfig.json"
            }
        },
        "setupFilesAfterEnv": [
            "<rootDir>/ts/testing/helpers/setup-jest.ts"
        ],
        "testMatch": [
            "<rootDir>/ts/**/*.tests.ts"
        ]
    },
    "dependencies": {
        "@codemirror/autocomplete": "^6.3.0",
        "@codemirror/commands": "^6.1.1",
        "@codemirror/lang-php": "^6.0.1",
        "@codemirror/language": "^6.2.1",
        "@codemirror/legacy-modes": "^6.3.1",
        "@codemirror/lint": "^6.0.0",
        "@codemirror/state": "^6.1.2",
        "@codemirror/view": "^6.3.0",
        "@lezer/highlight": "^1.1.1",
        "lezer-csharp-simple": "^0.9.1"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-syntax-class-properties": "^7.8.3",
        "@sinonjs/fake-timers": "^6.0.1",
        "@types/jest": "^29.2.5",
        "@types/jest-image-snapshot": "^6.1.0",
        "@types/lodash.merge": "^4.6.6",
        "@types/node": "^13.9.1",
        "@types/node-fetch": "^2.5.8",
        "@types/puppeteer": "^7.0.4",
        "@types/sinonjs__fake-timers": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "babel-plugin-add-import-extension": "^1.0.0",
        "babel-plugin-transform-commonjs": "^1.1.6",
        "cross-env": "^7.0.3",
        "eslint": "^8.30.0",
        "fast-glob": "^3.2.2",
        "fs-jetpack": "^2.1.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "jest-image-snapshot": "^6.1.0",
        "keysim": "^2.0.0",
        "lodash.merge": "^4.6.2",
        "merge-options": "^3.0.4",
        "node-fetch": "^2.6.1",
        "oldowan": "^1.0.0-preview-6",
        "puppeteer": "^19.4.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "ts-node": "^8.9.0",
        "typescript": "^4.9.4"
    }
}
